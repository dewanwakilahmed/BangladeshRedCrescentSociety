<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="750" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainpkg.controllers.WelcomeController"> 

    <Text text="Welcome to Bangladesh Red Crescent Society">
      <font>
         <Font size="24.0" />
      </font>
      
      <VBox.margin>
         <Insets bottom="15.0" />
      </VBox.margin>
    </Text>

    <Text text="Bangladesh Red Crescent Society is the leading humanitarian organization in Bangladesh. It  is the only organization in the country which has been recognized by the International Committee of the Red Cross (ICRC) and admitted to the International Federation of Red Cross and Red Crescent Societies (IFRC) in 1973." textAlignment="JUSTIFY" wrappingWidth="600">
      <font>
         <Font size="16.0" />
      </font>
    </Text>

    <Text text="* A user can have multiple accounts with the same user name under different user roles." textAlignment="CENTER">
        <font>
            <Font size="10.0" />
        </font>
    </Text>

    <Button onAction="#loadAuthView" text="Access Application">
      <VBox.margin>
         <Insets top="15.0" />
      </VBox.margin>
    </Button>

</VBox>
