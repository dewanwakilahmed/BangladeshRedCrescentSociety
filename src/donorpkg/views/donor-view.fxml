<VBox prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="donorpkg.controllers.DonorController">
    
    <HBox alignment="CENTER">
        <padding>
            <Insets bottom="10" left="15" right="15" top="10" />
        </padding>
        
        <Label fx:id="welcomeMessage" style="-fx-font-size: 22;" text="Welcome John Doe" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button onAction="#logout" text="Logout" />
    </HBox>
    
    <TabPane>
        <Tab closable="false" text="Ongoing Campaigns">
            <content>
                <VBox alignment="CENTER" spacing="10">
                    <padding>
                        <Insets bottom="25" left="25" right="25" top="25" />
                    </padding>
                    
                    <Label style="-fx-font-size: 18;" text="Ongoing Fundraising Campaigns" />
                    
                    <Text style="-fx-font-size: 10;" text="* The Goal and Contribute amounts below are in Bangladeshi Taka (BDT)" />
                    
                    <HBox alignment="CENTER">
                        <TableView fx:id="campaignsTable" maxWidth="750">
                            <columns>
                                <TableColumn fx:id="titleColumn" text="Title" />
                                <TableColumn fx:id="goalColumn" text="Goal" />
                                <TableColumn fx:id="contributedColumn" text="Contributed" />
                                <TableColumn fx:id="openedOnColumn" text="Opened on" />
                                <TableColumn fx:id="closingInColumn" text="Closing in" />
                                <TableColumn fx:id="actionColumn" text="Action" />
                            </columns>
                        </TableView>
                    </HBox>
                </VBox>
            </content>
        </Tab>
        
        <Tab closable="false" text="Financial Donation">
            <content>
                <GridPane alignment="CENTER" hgap="10" vgap="10">
                    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                        <GridPane.margin>
                           <Insets bottom="5.0" />
                        </GridPane.margin>
                        <Label style="-fx-font-size: 18;" text="Make Financial Donation" />
                    </HBox>
                    <Text style="-fx-font-size: 10;" text="* Your bank account details are already set below from your profile, you can change them if you want to use a different account" wrappingWidth="300" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                    <Label text="Bank Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="bankNameField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="Account Number:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="accountNumberField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label text="Routing Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="routingNumberField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label style="-fx-font-size: 16;" text="Contribute to Campaign" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">
                        <GridPane.margin>
                           <Insets top="15.0" />
                        </GridPane.margin>
                    </Label>
                    <Label text="Select Campaign:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <ComboBox fx:id="campaignComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    <Label text="Contribution Amount:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                    <TextField fx:id="campaignContributionField" prefWidth="200" promptText="Contribution Amount" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                    <Button onAction="#contributeToCampaign" prefWidth="200" text="Contribute" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                    <Label style="-fx-font-size: 16;" text="Make Personal Donation" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="9">
                        <GridPane.margin>
                           <Insets top="15.0" />
                        </GridPane.margin>
                    </Label>
                    <Label text="Donation Amount:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                    <TextField fx:id="personalDonationField" prefWidth="200" promptText="Donation Amount" GridPane.columnIndex="1" GridPane.rowIndex="10" />
                    <Button onAction="#makePersonalDonation" prefWidth="200" text="Make Donation" GridPane.columnIndex="1" GridPane.rowIndex="11" />
                </GridPane>
            </content>
        </Tab>
        
        <Tab closable="false" text="Goods Donation">
            <content>
                <!-- Put controls for making goods donations here -->
            </content>
        </Tab>
        
        <Tab closable="false" text="Past Donations">
            <content>
                <!-- Put controls for viewing past donations here -->
            </content>
        </Tab>
        
        <Tab closable="false" text="Tax Receipt">
            <content>
                <!-- Put controls for generating tax receipt here -->
            </content>
        </Tab>
        
        <Tab closable="false" text="Profile">
            <content>
                <!-- Put controls for viewing user profile here -->
            </content>
        </Tab>
        
        <Tab closable="false" text="About Organization">
            <content>
                <!-- Put controls for viewing organization details here -->
            </content>
        </Tab>
    </TabPane>

</VBox>
